<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background"
    android:id="@+id/diagnos_background">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="29dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/secondelement" />
    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="128dp"
        android:fontFamily="@font/regular"
        android:text="@string/diagnos"
        android:gravity="center"
        android:textColor="@color/black_text"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonDiagnose1"
        android:layout_width="301dp"
        android:layout_height="79dp"
        android:layout_marginTop="72dp"
        android:background="@drawable/unchosen_button"
        android:fontFamily="@font/medium"
        android:gravity="left|center"
        android:text="  Да"
        android:textColor="@color/unchosen_text"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="@+id/textView4"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonDiagnose2"
        android:layout_width="301dp"
        android:layout_height="79dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/unchosen_button"
        android:fontFamily="@font/medium"
        android:gravity="left|center"
        android:text="  Нет"
        android:textColor="@color/unchosen_text"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="@+id/buttonDiagnose1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/buttonDiagnose1"
        app:layout_constraintTop_toBottomOf="@+id/buttonDiagnose1" />

    <Button
        android:id="@+id/continueDiagnoseButton"
        android:layout_width="321dp"
        android:layout_height="65dp"
        android:layout_marginBottom="88dp"
        android:background="@drawable/buttons"
        android:backgroundTint="@color/red"
        android:fontFamily="@font/extrabold"
        android:text="Продолжить"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>