<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FinishTimeManagementLessonActivity"
    android:background="@color/red"
    android:id="@+id/finish_time_management_background"
    android:clickable="true">

    <ImageView
        android:id="@+id/finish_time_management_image"
        android:layout_width="wrap_content"
        android:clickable="true"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/finish_time_management_lesson" />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonFinishTimeManagementLesson"
        android:layout_width="273dp"
        android:layout_height="48dp"
        android:elevation="10dp"
        android:layout_marginBottom="44dp"
        android:background="@drawable/stroke_buttons"
        android:text="Завершить"
        android:textAllCaps="false"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>